$( function() {
  $(".client_added" ).datepicker({ dateFormat: 'dd/MM/yy',monthNames: ["Jan", "Feb", "Mar", "Apr", "May", "Jun", 
                 "Jul", "Aug", "Sep", "Oct", "Nov", "Dec"], });
